<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- main layout -->
	<definition name="base" template="/WEB-INF/views/tiles/layout/base-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/tiles/template/nav.jsp" />
		<put-attribute name="bady" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp" />
	</definition>
	
	<definition name="no-footer-base" template="/WEB-INF/views/tiles/layout/no-footer-base-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/tiles/template/nav.jsp" />
		<put-attribute name="bady" value="" />
	</definition>
	
	<definition name="sidebar-base" template="/WEB-INF/views/tiles/layout/sidebar-base-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/tiles/template/nav.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/tiles/template/sidebar.jsp" />
		<put-attribute name="bady" value="" />
	</definition>
	
   	<definition name="twoverseMember/*/*" extends="sidebar-base">
        <put-attribute name="body" value="/WEB-INF/views/twoverseMember/{1}/{2}.jsp" />
    </definition>
    <definition name="twoverseMember/*" extends="no-footer-base">
        <put-attribute name="body" value="/WEB-INF/views/twoverseMember/{1}.jsp" />
    </definition>
	<definition name="*" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    </definition>
    <definition name="real_estate/*" extends="no-footer-base">
        <put-attribute name="body" value="/WEB-INF/views/real_estate/{1}.jsp" />
    </definition>
	<definition name="*/*" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
	<definition name="real_estate/*/*" extends="no-footer-base">
        <put-attribute name="body" value="/WEB-INF/views/real_estate/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>